<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
                             http://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>BookLoggerWeb</display-name>

    <!-- Add Book Servlet -->
    <servlet>
        <servlet-name>AddBook</servlet-name>
        <servlet-class>servlets.AddBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBook</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>

    <!-- View Books Servlet -->
    <servlet>
        <servlet-name>ViewBooks</servlet-name>
        <servlet-class>servlets.ViewBooksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewBooks</servlet-name>
        <url-pattern>/viewBooks</url-pattern>
    </servlet-mapping>

    <!-- Remove Book Servlet -->
    <servlet>
        <servlet-name>RemoveBook</servlet-name>
        <servlet-class>servlets.RemoveBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveBook</servlet-name>
        <url-pattern>/removeBook</url-pattern>
    </servlet-mapping>

    <!-- Default welcome page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
